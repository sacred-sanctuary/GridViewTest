<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#FFFFFFFF">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/prefarence_about_app_name_tag"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textSize="7pt"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:text="@string/prefarence_about_app_name_tag" />
        <TextView
            android:id="@+id/prefarence_about_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="7pt"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:text="@string/prefarence_about_app_name" />
        
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/prefarence_about_app_developer_tag"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textSize="7pt"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:text="@string/prefarence_about_app_developer_tag" />
        <TextView
            android:id="@+id/prefarence_about_app_developer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="7pt"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:text="@string/prefarence_about_app_developer" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/prefarence_about_app_version_tag"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textSize="7pt"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:text="@string/prefarence_about_app_version_tag" />
        <TextView
            android:id="@+id/prefarence_about_app_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="7pt"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:text="@string/prefarence_about_app_version" />
    </LinearLayout>
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/prefarence_about_app_copyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="6pt"
            android:textStyle="italic"
            android:layout_margin="5dp"
            android:text="@string/prefarence_about_app_copyright" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFFFF"
        android:layout_margin="5dp">
        <TextView
            android:id="@+id/prefarence_about_app_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="7pt"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:text="@string/prefarence_about_app_history" />
        <TextView
            android:id="@+id/prefarence_about_app_history_001"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="5pt"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="@string/prefarence_about_app_history_001" />
    </LinearLayout>
</LinearLayout>
